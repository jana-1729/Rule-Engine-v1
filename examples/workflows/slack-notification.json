{
  "name": "Slack Notification on Workflow Completion",
  "description": "Send a Slack message when a specific workflow completes",
  "version": "1.0.0",
  "trigger": {
    "integration": "webhook",
    "trigger": "http_request",
    "config": {
      "method": "POST",
      "path": "/webhook/workflow-complete"
    },
    "connectionId": "INTERNAL"
  },
  "steps": [
    {
      "id": "step-1",
      "name": "Format Message",
      "integration": "internal",
      "action": "transform",
      "connectionId": "INTERNAL",
      "input": {
        "mappings": [
          {
            "source": "$.workflowName",
            "target": "$.text",
            "transform": {
              "type": "template",
              "config": {
                "template": "âœ… Workflow '{{$.workflowName}}' completed successfully in {{$.duration}}ms"
              }
            }
          }
        ],
        "static": {
          "channel": "#notifications"
        }
      }
    },
    {
      "id": "step-2",
      "name": "Send to Slack",
      "integration": "slack",
      "action": "send_message",
      "connectionId": "CONNECTION_ID_HERE",
      "input": {
        "mappings": [
          {
            "source": "$.text",
            "target": "$.text"
          },
          {
            "source": "$.channel",
            "target": "$.channel"
          }
        ]
      },
      "continueOnError": false
    }
  ],
  "settings": {
    "timeout": 10000,
    "errorHandling": {
      "strategy": "stop",
      "notifyOn": ["error"]
    }
  }
}

